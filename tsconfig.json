{
  "compilerOptions": {
    "removeComments": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "lib": ["ES2018", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/test/**/*"]
}
